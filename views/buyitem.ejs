    <title>My items</title>
</head>
<style>
    .table-wrapper {
        margin-top: 50px;
    }

    .player-img {
        width: 40px;
        height: 40px;
    }

    .add-player-form {
        margin-top: 50px;
    }
</style>
<body>
    <div class="page-wrapper">
        <nav class="navbar navbar-light bg-light">
            <span class="navbar-brand mb-0 h1" ><a href="myitem">Buy</a></span>
        </nav>
    <div class="container">
        <div class="ftco-blocks-cover-1">
            <div class="ftco-cover-1 overlay" style="background-image: url('images/hero_1.jpg')">
              <div class="container">
                <div class="row align-items-center">
                  <div class="col-lg-5">
                    <div class="feature-car-rent-box-1">
                      <h3>Item name</h3>
                      <ul class="list-unstyled">
                        <li>
                          <span>Image:</span>
                          <span class="spec">4</span>
                        </li>
                        <li>
                          <span>Category:</span>
                          <span class="spec">6</span>
                        </li>
                        <li>
                            <span>Price:</span>
                            <span class="spec">6</span>
                          </li>
                      </ul>
                      <div class="d-flex align-items-center bg-light p-3">
                        <form class="add-player-form" action="/buy/<%= data %>" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="item-price">Your price</label>
                                    <input type="number" class="form-control" name="amt" id="amt" value="amt" required>
                                </div>
                            <button type="submit" class="btn btn-success float-right">Offer</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        

    
</body>