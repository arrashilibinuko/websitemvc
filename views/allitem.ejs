<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="/assets/css/custom.css">-->
    <title>My items</title>
</head>
<style>
    .table-wrapper {
        margin-top: 50px;
    }

    .player-img {
        width: 40px;
        height: 40px;
    }

    .add-player-form {
        margin-top: 50px;
    }
</style>
<body>
<div class="page-wrapper">
    <nav class="navbar navbar-light bg-light">
        <span class="navbar-brand mb-0 h1" ><a href="/myitem">All items</a></span>
    </nav>





    <div class="table-wrapper">
  
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data.length > 0) { %>
                        <% data.forEach(function(result) { %>
                            <tr>
                                <th scope="row"><%= result.dataValues.id %></th>
                                <td><%= result.dataValues.item_pic_url %></td>
                                <td><%= result.dataValues.item_name %></td>
                                <td><%= result.dataValues.item_price %></td>
                                <td><%= result.dataValues.item_category %></td>
                                <td>
                                    <a href="/buy/<%= result.dataValues.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-danger">Buy</a>
                                </td>
                            </tr>
                      <%  }); %>
                 <%   } else { %>
                    <p>No data</p>
                <% } %>
      
                </tbody>
            </table>

    </div>
</div>
</body>
</html>